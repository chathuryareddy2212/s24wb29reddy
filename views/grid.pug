extends layout 

block content
  h1= title
  p Welcome to #{title}
  p Rows: #{query.rows} and Columns: #{query.cols}
 
  - let rows = Number(query.rows);
  - let cols = Number(query.cols);
 
  - if(Number.isInteger(rows) > 0  && Number.isInteger(cols)> 0)
    p Both #{rows} and #{cols} are integers.
 
    - if (rows < 3 || rows > 13)
      p Please provide a number of rows and columns within the range of 3 to 13!
 
    - else if (cols < 3 || cols > 13)
      p Please provide a number of rows and columns within the range of 3 to 13!
 
    - else
      table#outer
        - for(let i=0; i<rows; i++)
          tr#middle
            - for(let j=0; j<cols; j++)
              td= Math.min(i + 1, j + 1)
  - else
    p Rows and columns must be integers.